#!/usr/bin/with-contenv bashio
# ==============================================================================
# Send addon discovery information to Home Assistant
# ==============================================================================
declare ha_config

# Prepare discovery payload
ha_config=$(\
    bashio::var.json \
        host "$(hostname)" \
        port "^7813" \
)

if bashio::discovery "detailed_hello_world_push" "${ha_config}" > /dev/null; then
    bashio::log.info "Successfully send discovery information to Home Assistant."
else
    bashio::log.error "Discovery message to Home Assistant failed!"
fi